{
  "name": "sariyanta",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/sariyanta/app-sariyanta-nestjs.git",
  "author": "Desar <desar@sariyanta.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:www": "pnpm --filter www run dev",
    "dev:api": "pnpm --filter api run dev",
    "deploy:www": "gcloud config set run/region us-central1 && gcloud run deploy www --source=./apps/www",
    "deploy:api": "gcloud config set run/region us-central1 && gcloud run deploy api --source=./apps/api",
    "docker:build:www": "docker build -t sariyanta/app-sariyanta-www --platform=linux/amd64 -f apps/www/docker/production/Dockerfile apps/www",
    "docker:build:api": "docker build -t us-central1-docker.pkg.dev/sariyanta-dev/ghcr/sariyanta/app-sariyanta-api --platform=linux/amd64 -f docker/dockerapi .",
    "generate:openapi": "openapi-generator-cli generate -i /local/packages/api-client/src/openapi.json -g typescript-axios -o /local/packages/api-client/src --additional-properties=useSingleRequestParameter=true,withSeparateModelsAndApi=true,modelPropertyNaming=original,apiPackage=clients,modelPackage=models"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@openapitools/openapi-generator-cli": "^2.20.2",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript-eslint": "^8.20.0"
  }
}